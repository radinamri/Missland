# ==============================================
# Missland Environment Configuration Template
# ==============================================
# 
# THREE ENVIRONMENT FILES STRATEGY:
# 
# 1. .env.docker.example (THIS FILE - TRACKED IN GIT)
#    Template with example values
#    Safe to commit - contains no real secrets
#
# 2. .env.docker (GIT-IGNORED - PRODUCTION)
#    Copy from .env.docker.example
#    For Docker deployment on production server
#    Contains REAL production secrets - NEVER commit
#
# 3. .env.local.docker (GIT-IGNORED - LOCAL DEV)
#    Copy from .env.local.docker.example
#    For local development with Docker services
#    Contains local dev secrets - NEVER commit
#
# ==============================================
# DJANGO CORE SETTINGS
# ==============================================

DEBUG=False
SECRET_KEY=your-50-char-django-secret-key-replace-with-real-key-min-50-chars

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================

DB_NAME=missland_db
DB_USER=postgres
DB_PASSWORD=your-strong-database-password-min-16-chars-mixed-types

# Production Docker: "postgres" (container name)
# Local Dev: "127.0.0.1" (localhost)
DB_HOST=postgres
DB_PORT=5432

# ==============================================
# REDIS CONFIGURATION
# ==============================================

# Production Docker: "redis://redis:6379/1"
# Local Dev: "redis://127.0.0.1:6379/1"
REDIS_URL=redis://redis:6379/1
USE_REDIS=true

# ==============================================
# SUPERUSER CONFIGURATION
# ==============================================

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@missland.app
DJANGO_SUPERUSER_PASSWORD=your-admin-password-change-in-production

# ==============================================
# DATA INITIALIZATION
# ==============================================

IMPORT_REAL_POSTS=true
SEED_ARTICLES=true

# ==============================================
# BASE URL CONFIGURATION
# ==============================================

# Production: http://46.249.102.155
# Local Dev: http://127.0.0.1:8000
BASE_URL=http://46.249.102.155
MEDIA_BASE_URL=http://46.249.102.155

# ==============================================
# ALLOWED HOSTS AND CORS
# ==============================================

ALLOWED_HOSTS=46.249.102.155,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://46.249.102.155

# ==============================================
# GOOGLE OAUTH CONFIGURATION
# ==============================================

GOOGLE_OAUTH_CLIENT_ID=your-google-client-id-here
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# ==============================================
# OPENAI CONFIGURATION (Required for AI Chat)
# ==============================================

OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-5.1
EMBEDDING_MODEL=text-embedding-3-small
NEXT_PUBLIC_CHAT_API_URL=http://46.249.102.155

# ==============================================
# RAG SERVICE CONFIGURATION
# ==============================================

# For production Docker: http://nail-rag-api:8000 (internal network)
# Set automatically via docker-compose environment
RAG_SERVICE_URL=http://nail-rag-api:8000
RAG_SERVICE_TIMEOUT=30.0
RAG_SERVICE_MAX_RETRIES=3

# CORS for RAG service (production)
ALLOWED_ORIGINS=http://46.249.102.155

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@missland.app

# ==============================================
# LOGGING
# ==============================================

DJANGO_LOG_LEVEL=INFO

# ==============================================
# FRONTEND NEXT.JS CONFIGURATION
# ==============================================

# Production: http://46.249.102.155 (no /api suffix - frontend code includes full paths)
# Local Dev: http://127.0.0.1:8000
NEXT_PUBLIC_API_URL=http://46.249.102.155
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id-here
NODE_ENV=production

# ==============================================
# SENTRY (Optional)
# ==============================================

SENTRY_DSN=
