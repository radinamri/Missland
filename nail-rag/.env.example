# Nail RAG Service Environment Configuration
# Copy this file to .env and fill in the values

# Weaviate Vector Database
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_SCHEME=http
WEAVIATE_API_KEY=

# OpenAI API Key (required)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Model Configuration
OPENAI_MODEL=gpt-5.1
EMBEDDING_MODEL=text-embedding-3-small

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# Explore Page Base URL (for generating explore links)
EXPLORE_BASE_URL=http://localhost:3000
