# ==============================================
# Missland Backend - Production Configuration Template
# ==============================================
# 
# FILE: .env.docker.example (TRACKED IN GIT - SAFE TO COMMIT)
# PURPOSE: Template for production server deployment
# 
# Copy to .env.docker and fill with real production secrets
# (Do NOT commit .env.docker to Git)
#

# ==============================================
# DJANGO CORE SETTINGS
# ==============================================

DJANGO_SETTINGS_MODULE=config.settings
DEBUG=False
SECRET_KEY=your-50-char-django-secret-key-replace-with-real-key-min-50-chars

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================

# For production Docker deployment:
DB_NAME=missland_db
DB_USER=postgres
DB_PASSWORD=your-strong-database-password-min-16-chars-mixed-types
DB_HOST=postgres
DB_PORT=5432

# ==============================================
# REDIS CONFIGURATION
# ==============================================

# For production Docker: redis://redis:6379/1
REDIS_URL=redis://redis:6379/1
USE_REDIS=true

# ==============================================
# SUPERUSER CONFIGURATION
# ==============================================

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@missland.app
DJANGO_SUPERUSER_PASSWORD=your-admin-password-change-in-production

# ==============================================
# DATA INITIALIZATION
# ==============================================

IMPORT_REAL_POSTS=true
SEED_ARTICLES=true

# ==============================================
# BASE URL CONFIGURATION
# ==============================================

# Production server: http://46.249.102.155
BASE_URL=http://46.249.102.155
MEDIA_BASE_URL=http://46.249.102.155

# ==============================================
# ALLOWED HOSTS AND CORS
# ==============================================

ALLOWED_HOSTS=46.249.102.155,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://46.249.102.155

# ==============================================
# GOOGLE OAUTH CONFIGURATION
# ==============================================

GOOGLE_OAUTH_CLIENT_ID=your-google-client-id-here
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# ==============================================
# OPENAI CONFIGURATION (Optional)
# ==============================================

OPENAI_API_KEY=

# Chat API URL
NEXT_PUBLIC_CHAT_API_URL=http://46.249.102.155

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@missland.app

# ==============================================
# LOGGING
# ==============================================

DJANGO_LOG_LEVEL=INFO

# ==============================================
# FRONTEND NEXT.JS CONFIGURATION
# ==============================================

NEXT_PUBLIC_API_URL=http://46.249.102.155/api
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id-here
NODE_ENV=production

# ==============================================
# SENTRY (Optional)
# ==============================================

SENTRY_DSN=
