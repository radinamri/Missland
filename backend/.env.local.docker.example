# ==============================================
# Missland Backend - Local Development Template
# ==============================================
# 
# FILE: .env.local.docker.example (TRACKED IN GIT - SAFE TO COMMIT)
# PURPOSE: Template for local development with Docker services
# 
# Copy to .env.local.docker and fill with local dev values
# (Do NOT commit .env.local.docker to Git)
#

# ==============================================
# DJANGO CORE SETTINGS
# ==============================================

DJANGO_SETTINGS_MODULE=config.settings
DEBUG=True
SECRET_KEY=your-50-char-django-secret-key-or-use-generate-from-example

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================

# For local development with Docker:
# - DB_HOST=127.0.0.1 (localhost)
# - Run: docker-compose --env-file .env.local.docker up -d postgres redis

DB_NAME=missland_db
DB_USER=postgres
DB_PASSWORD=local_dev_password_123
DB_HOST=127.0.0.1
DB_PORT=5432

# ==============================================
# REDIS CONFIGURATION
# ==============================================

# For local development: redis://127.0.0.1:6379/1
REDIS_URL=redis://127.0.0.1:6379/1
USE_REDIS=true

# ==============================================
# SUPERUSER CONFIGURATION
# ==============================================

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@missland.local
DJANGO_SUPERUSER_PASSWORD=admin_password_123

# ==============================================
# DATA INITIALIZATION
# ==============================================

IMPORT_REAL_POSTS=true
SEED_ARTICLES=true

# ==============================================
# BASE URL CONFIGURATION
# ==============================================

# Local development: http://127.0.0.1:8000
BASE_URL=http://127.0.0.1:8000
MEDIA_BASE_URL=http://127.0.0.1:8000

# ==============================================
# ALLOWED HOSTS AND CORS
# ==============================================

ALLOWED_HOSTS=localhost,127.0.0.1,127.0.0.1:8000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================
# GOOGLE OAUTH CONFIGURATION
# ==============================================

# Optional for local development - leave empty if not testing OAuth
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==============================================
# OPENAI CONFIGURATION (Optional)
# ==============================================

OPENAI_API_KEY=

# Chat API URL
NEXT_PUBLIC_CHAT_API_URL=http://127.0.0.1:8000

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@missland.local

# ==============================================
# LOGGING
# ==============================================

DJANGO_LOG_LEVEL=DEBUG

# ==============================================
# FRONTEND NEXT.JS CONFIGURATION
# ==============================================

# No /api suffix - frontend code includes full paths like /api/auth/...
NEXT_PUBLIC_API_URL=http://127.0.0.1:8000
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
NODE_ENV=development

# ==============================================
# SENTRY (Optional)
# ==============================================

SENTRY_DSN=
